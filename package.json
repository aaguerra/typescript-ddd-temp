{
  "name": "my-express-api",
  "version": "1.0.0",
  "description": "demo",
  "main": "start.ts",
  "scripts": {
    "dev": "nodemon",
    "start:w": "npm run build:clean:w && npm run start",
    "start:l": "npm run build:clean:w && npm run start",
    "start": "npm run build && cross-env NODE_ENV=production node dist/src/apps/start.js",
    "start:dev": "ts-node src/apps/start.ts",
    "build": "tsc",
    "serve": "node dist/src/apps/start.js",
    "build:clean:l": "rm -r dist; exit 0",
    "build:clean:w": "if exist dist rmdir /s /q dist",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --fix --ext .ts",
    "test": "npm run test:unit && npm run test:features",
    "test:unit": " cross-env NODE_ENV=test jest",
    "test:features": " npm run test:cucumber:features",
    "test:cucumber:features": " cross-env NODE_ENV=test ./node_modules/.bin/cucumber-js -p default"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^10.3.2",
    "@cucumber/cucumber-expressions": "^17.1.0",
    "@cucumber/gherkin": "^28.0.0",
    "@types/cors": "^2.8.17",
    "@types/errorhandler": "^1.5.3",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.2",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "pino-pretty": "^11.0.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "bson": "^6.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "errorhandler": "^1.5.1",
    "express": "^4.19.2",
    "express-promise-router": "^4.1.1",
    "express-validator": "^7.0.1",
    "fast-glob": "^3.3.2",
    "helmet": "^7.1.0",
    "http-status": "^1.7.4",
    "node-dependency-injection": "^3.1.2",
    "node-dependency-injection-express-middleware": "^1.2.2",
    "pino-http": "^9.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ],
    "**/*": "npm run format",
    "**/*.{js,ts}": "npm run lint:fix"
  }
}
